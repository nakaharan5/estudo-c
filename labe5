#include <stdio.h>
#include <string.h>
int main(){
	int i,j,tam;
	char string[100],string2[100];
	printf("Digite a primeira palavra: \n");
	gets(string);
	printf("Digite a segunda palavra: \n");
	gets(string2);
	
	for (i=0; string[i]!='\0'; i++);
	for(j=0; string2[j]!='\0'; i++,j++){
		string[i]=string2[j];
		
	}
	string [i] = '\0';
	printf("CONCATENACAO: %s\n",string);
	tam=strlen(string);
	printf("TAMANHO CONCATENACAO: %d\n",tam);
}
